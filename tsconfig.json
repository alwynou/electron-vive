{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "isolatedModules": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": ["node"],
    "rootDir": ".",
    "paths": {
      "@electron-vive/share": ["packages/share/src/index.ts"]
    }
  },
  "include": [
    "packages",
    ".electron-vive"
 ]
}
